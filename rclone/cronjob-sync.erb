apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: rclone-sync-<%= name %>
spec:
  schedule: "<%= minute %> <%= hour %>/4 * * * "
  concurrencyPolicy: Forbid
  startingDeadlineSeconds: 300
  jobTemplate:
    spec:
      template:
        spec:
          restartPolicy: OnFailure
          containers:
          - name: rclone
            command:
              - /run-rclone.sh
              - sync
              - --drive-chunk-size=128M
              - --transfers=2
              - /source
              - gsc:<%= name %>
              - -v
              - --stats=15s
              <%- args.each do |arg| -%>
              - "<%= arg %>"
              <%- end -%>
            image: dvorak/rclone
            imagePullPolicy: Always
            env:
            - name: RCLONE_CONFIG_PASS
              valueFrom:
                secretKeyRef:
                  name: rclone-config-password
                  key: RCLONE_CONFIG_PASS
            - name: PUSH_GATEWAY
              value: https://pushgateway.k.oneill.net
            - name: INSTANCE
              value: <%= name %>
            - name: LANG
              value: "en_US.UTF-8"
            - name: LANGUAGE
              value: en_US.UTF-8
            - name: LC_ALL
              value: en_US.UTF-8
            volumeMounts:
            - mountPath: /root/.config/rclone
              name: rclone-config
            - mountPath: /source
              name: source
              readOnly: true
          volumes:
          - name: rclone-config
            configMap:
              name: rclone-config
          - nfs:
              server: fs1.oneill.net
              path: /volume1/<%= name %>
              readOnly: true
            name: source
