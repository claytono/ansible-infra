{
  "description": "Renovate config for Helm chart version automation in render-helm.sh scripts.",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)render-helm\\.sh$"],
      "matchStrings": [
        "(?<depName>[A-Z0-9_]+_CHART_NAME)=(?<currentValue>\\\"[^\\\"]+\\\")",
        "(?<depName>[A-Z0-9_]+_CHART_VERSION)=(?<currentValue>\\\"[0-9a-zA-Z\\.\\-]+\\\")"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "{{{depName}}}",
      "versioningTemplate": "helm",
      "extractVersionTemplate": "{{{currentValue}}}"
    }
  ]
}
